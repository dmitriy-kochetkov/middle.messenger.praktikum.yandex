.profile-image-wrap {
    padding-bottom: 21px;
}

.profile-image {
    width: 130px;
    height: 130px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    background: var(--grey-4);
    cursor: pointer;
}

.profile-avatar {
    border-radius: 50%;
}

.change-image-msg {
    position: absolute;
    padding: 20px;
    width: 130px;
    height: 130px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0 0 0 / 50%);
    border-radius: 50%;
    color: var(--white);
    visibility: hidden;
    text-align: center;
}

.profile-image-wrap:hover .change-image-msg {
    visibility: visible;
}
