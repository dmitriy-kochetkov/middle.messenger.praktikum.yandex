.conversation {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: column;
    height: 100vh;
    padding: 0 20px;
    color: var(--grey-2);

    &__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 10px 0;
        border-bottom: 1px solid var(--grey-5);
    }

    &__avatar {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        overflow: hidden;
        flex: 0 0 auto;

        &_image {
          width: 34px;
          height: 34px;
        }
    }

    &__name {
        flex: auto;
        font-size: 13px;
        color: var(--grey-1);
        padding-left: 10px;
    }

    &__options-button {
        width: 25px;
        height: 25px;
        background: url("../../../static/options.svg") 11px 4px no-repeat;
        border: none;
        border-radius: 50%;
        box-sizing: border-box;

        &:hover {
          background: var(--blue-2) url("../../../static/options-hover.svg") 11px 4px no-repeat;
        }
    }

    &__content {
        height: calc(100vh - 108px);
        width: 100%;
        /*overflow: scroll;*/
        overflow: auto;
        display: flex;
        flex-direction: column-reverse;
    }

    &__footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 10px 0;
        border-top: 1px solid var(--grey-5);
    }

    &__send-message {
      flex-grow: 1;
      display: flex;
      justify-content: space-between;
    }

    &__empty {
        display: flex;
        height: 100%;
        width: 100%;
        justify-content: center;
        align-items: center;
        font-size: 12px;
    }

}
