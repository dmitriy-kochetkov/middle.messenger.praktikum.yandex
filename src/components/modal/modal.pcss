.backdrop {
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--grey-7);
}

.modal {
    width: 340px;
    background: var(--white);
    padding: 40px 30px;
    border-radius: var(--widnow-border-radius);
    box-shadow: var(--window-shadow);
    flex-direction: column;
    justify-content: space-between;
    display: flex;
}

.modal-title {
    text-align: center;
    font-size: 15px;
    margin: 0;
    flex-grow: 0;
}

.button_modal {
    width: 100%;
    padding: 12px 0;
}

.modal-form {
    padding: 40px 0 0;
    min-height: 150px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
}
