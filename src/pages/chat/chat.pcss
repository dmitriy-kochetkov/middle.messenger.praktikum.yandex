.chats {
    height: 100vh;
    display: grid;
    grid-auto-flow: column;
    grid-template-columns: 310px 1fr;
}

.chats_sidebar {
    height: 100vh;
    background: var(--grey-3);
    border-right: 1px solid var(--grey-5);
    box-sizing: border-box;
}

.chats_sidebar-header {
    text-align: right;
    font-size: 12px;
    color: var(--grey-2);
    padding: 11px 10px;
}

.profile-link {
    color: var(--grey-2);
    text-decoration: none;
}

.chats_sidebar-search {
    background: var(--grey-4);
    height: 32px;
    border-radius: 5px;
    margin: 12px 0;
    display: flex;
    padding: 6px 10px;
}

.search-input{
    display: block;
    width: 100%;
    background: transparent url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M11.5924 11.4138C10.1605 12.8457 7.83886 12.8457 6.40694 11.4138C4.97502 9.9819 4.97502 7.6603 6.40694 6.22837C7.83886 4.79645 10.1605 4.79645 11.5924 6.22837C13.0243 7.6603 13.0243 9.9819 11.5924 11.4138ZM12.0328 12.7968C10.0725 14.2962 7.25696 14.1495 5.46413 12.3566C3.51151 10.404 3.51151 7.23819 5.46413 5.28556C7.41675 3.33294 10.5826 3.33294 12.5352 5.28556C14.3279 7.07831 14.4747 9.89373 12.9755 11.8539L16.5423 15.4206L15.5994 16.3635L12.0328 12.7968Z' fill='%23999999'/%3E%3C/svg%3E%0A") no-repeat 0px center;
    border: none;
    font-size: 12px;   
    outline: none;
    padding-left: 24px;
}

.search-input:focus{
    border:0;
}

.chat-items {
    height: calc(100vh - 92px);
    overflow: scroll;
}

.chat_feed {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--grey-2);
}
